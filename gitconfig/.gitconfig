[push]
	default = simple
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	exec = "!exec "
	root = !pwd
    aa = add --all .
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    who = shortlog -s --
[core]
	editor = vim
[help]
	autocorrect = 1
[branch]
	autosetuprebase = always
